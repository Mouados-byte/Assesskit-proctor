<div id="assessment_header" class="bg-white border-b border-zinc-200 py-4">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <div class="flex gap-x-4 sm:gap-x-8 items-center justify-between">
      <div class="min-w-0 flex-1 flex items-center gap-x-2">
        <%= link_to back_link, class: "secondary-button p-2.5 mr-4 sm:mr-8" do %>
          <%= helpers.svg_tag "chevron-left", class: "size-4", "stroke-width": 3 %>
        <% end %>

        <div>
          <h2 class="line-clamp-1 w-full text-xl font-bold leading-7 text-slate-900" data-assessment-title-target="display"><%= title %></h2>

          <div class="mt-1 flex gap-x-6 items-center">
            <div class="flex gap-x-2 items-center text-gray-600">
              <%= helpers.svg_tag "test-document", class: "size-4" %>
              <p id="tests-count" class="font-medium text-sm"><%= tests_count %></p>
            </div>

            <div class="flex gap-x-2 items-center text-gray-600">
              <%= helpers.svg_tag "clock", class: "size-4" %>
              <p class="font-medium text-sm"><%= helpers.format_duration(@assessment.duration_seconds) %></p>
            </div>
          </div>
        </div>
      </div>

      <%= save_and_exit_button %>
    </div>
  </div>
</div>
