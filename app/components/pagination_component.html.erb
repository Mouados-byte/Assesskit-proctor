<nav class="flex items-center justify-between border-t border-gray-200 px-4 sm:px-0 py-3">
  <div class="flex w-0 flex-1">
    <%= link_to page_path(page: previous_page), class: "inline-flex items-center pt-4 pr-1 text-sm font-medium text-gray-500 hover:text-gray-700 #{previous_page ? '' : 'pointer-events-none opacity-50'}" do %>
      <%= helpers.svg_tag "chevron_left", class: "mr-3 h-5 w-5", "stroke-width": 2 %>
    <% end %>
  </div>
  <div class="hidden md:flex md:items-center">
    <p class="text-sm text-gray-700">
      <%= page_info %>
    </p>
    <form action="<%= url_for %>" method="get" class="ml-6">
      <label for="per_page" class="sr-only">Items per page</label>
      <select name="per_page" onchange="this.form.submit()" class="block w-full rounded-md border-gray-300 py-1.5 text-base focus:border-indigo-500 focus:outline-none focus:ring-indigo-500 sm:text-sm">
        <% per_page_options.each do |option| %>
          <option value="<%= option %>" <%= 'selected' if option == per_page %>><%= option %></option>
        <% end %>
      </select>

      <% additional_params.merge(page: current_page).to_h.each do |key, value| %>
        <%= hidden_field_tag key, value %>
      <% end %>
    </form>
  </div>
  <div class="flex w-0 flex-1 justify-end">
    <%= link_to page_path(page: next_page), class: "inline-flex items-center pt-4 pl-1 text-sm font-medium text-gray-500 hover:text-gray-700 #{next_page ? '' : 'pointer-events-none opacity-50'}" do %>
      <%= helpers.svg_tag "chevron_right", class: "ml-3 h-5 w-5", "stroke-width": 2 %>
    <% end %>
  </div>
</nav>