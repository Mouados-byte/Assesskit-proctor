<%= render "shared/get_started/header" %>

<main class="bg-zinc-50 h-full">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 pb-16">
      <div class="pt-12">
        <h1 class="text-2xl font-bold leading-7 text-gray-900 sm:truncate sm:text-3xl sm:tracking-tight">Your business profile</h1>
      </div>
      
      <%= form_with model: business do |form| %>
        <div class="pt-6 space-y-8">
          <div class="bg-white shadow sm:overflow-hidden rounded-xl">
            <div class="px-4 py-6 sm:px-6 sm:py-7">
              <div class="grid grid-cols-1 gap-x-8 gap-y-10 md:grid-cols-3">
                <div>
                  <h2 class="text-lg font-semibold leading-7 text-gray-900">Business details</h2>
                  <p class="mt-1 text-base text-gray-500 leading-tight">Information about your business.</p>
                </div>

                <div class="col-span-2">
                  <div class="grid grid-cols-1 gap-x-6 gap-y-6">
                    <div>
                      <%= form.label :company, class: "required-label" %>
                      <%= form.text_field :company, required: true, autocomplete: "organization", class: "primary-field" %>
                    </div>

                    <div>
                      <%= form.label :website, class: "primary-label" %>
                      <div class="flex rounded-md shadow-sm">
                        <span class="inline-flex items-center rounded-l-md border border-r-0 border-gray-300 px-3 text-gray-500 sm:text-sm bg-gray-50">https://</span>
                        <%= form.text_field :website, placeholder: "www.example.com", class: "block w-full min-w-0 flex-1 rounded-none rounded-r-md border-0 py-1.5 text-gray-900 ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-blue-600 sm:text-sm sm:leading-6" %>
                      </div>
                    </div>

                    <div>
                       <%= form.label :bio, class: "required-label" %>
                       <%= form.text_area :bio, rows: "3", required: true, placeholder: "Write a few sentences about your company.", class: "primary-field" %>
                    </div>

                    <div data-controller="file-upload" data-file-upload-visibility-class="hidden" data-file-upload-loading-class="opacity-50">
                      <span class="required-label"><%= t(".avatar") %></span>
                      <div class="mt-1 flex items-center gap-x-5">
                        <div class="relative">
                          <%= render AvatarComponent.new(avatarable: business, variant: :medium, data: {"file-upload-target": "image"}) %>
                          <div data-file-upload-target="activity" class="hidden absolute left-1/2 top-1/2 transform -translate-x-1/2 -translate-y-1/2">
                            <%= svg_tag "refresh", class: "w-8 h-8 text-gray-900 animate-reverse-spin", title: t(".loading") %>
                          </div>
                        </div>
                        <div>
                          <%= form.file_field :avatar, direct_upload: true, accept: "image/png, image/jpg, image/jpeg", data: {action: "file-upload#select direct-upload:initialize->file-upload#start direct-upload:error->file-upload#error"}, class: "hidden" %>
                          <%= form.label :avatar, t(".change_avatar"), class: "cursor-pointer rounded-full bg-gray-900 px-3.5 py-2 text-xs font-semibold text-white shadow-sm hover:bg-gray-700" %>
                          <p class="mt-1.5 text-xs leading-5 text-gray-500">JPG, JPEG or PNG. 2MB max.</p>
                        </div>
                      </div>
                      <div data-file-upload-target="error" class="hidden bg-red-50 border-l-4 border-red-400 p-4 mt-4">
                        <div class="ml-3">
                          <p class="text-sm text-red-700"><%= t(".something_went_wrong") %></p>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <div class="bg-white shadow sm:overflow-hidden rounded-xl">
            <div class="px-4 py-6 sm:px-6 sm:py-7">
              <div class="grid grid-cols-1 gap-x-8 gap-y-10 md:grid-cols-3">
                <div>
                  <h2 class="text-lg font-semibold leading-7 text-gray-900">Personal details</h2>
                  <p class="mt-1 text-base text-gray-500 leading-tight">Information about you, the contact point for your business on AssessKit.</p>
                </div>

                <div class="col-span-2">
                  <div class="grid grid-cols-1 gap-x-6 gap-y-6">
                    <div>
                      <%= form.label :contact_name, class: "required-label" %>
                      <%= form.text_field :contact_name, autocomplete: "name", class: "primary-field" %>
                    </div>

                    <div>
                      <%= form.label :contact_role, class: "primary-label" %>
                      <%= form.text_field :contact_role, autocomplete: "organization-title", class: "primary-field" %>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <div class="text-right">
            <%= form.submit "Save", class: "primary-form-submit" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</main>
