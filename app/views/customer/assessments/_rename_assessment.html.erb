<dialog id="my_modal_<%= id %>" class="modal px-6">
  <div class="modal-box max-w-xl rounded-xl p-8 bg-white">
    <form method="dialog">
      <button class="btn btn-sm btn-circle btn-ghost absolute right-6 top-6">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="size-6">
          <path stroke-linecap="round" stroke-linejoin="round" d="M6 18 18 6M6 6l12 12" />
        </svg>
      </button>
    </form>


    <div>
      <h1 class="font-bold leading-7 text-gray-800 text-xl">Rename assessment</h1>
      <form action="#" method="POST" class="mt-8">
        <div>
          <label for="assessment-name" class="block text-sm font-medium leading-6 text-gray-900">Assessment name</label>
          <input type="text" name="assessment-name" id="assessment-name" class="mt-2 block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-blue-600 sm:text-sm sm:leading-6" value="Business Manager">
        </div>
        <div class="mt-9 flex items-center justify-end gap-x-5">
          <button type="button" class="ring-1 rounded-full py-2.5 px-4 text-sm font-semibold focus:outline-none ring-slate-700 text-slate-700 hover:text-slate-900  active:bg-slate-100 active:text-slate-600 focus-visible:outline-blue-600 focus-visible:ring-slate-300">Cancel</button>
          <button type="submit" class="rounded-full bg-blue-600 px-6 py-2.5 text-sm font-semibold text-white shadow-sm hover:bg-blue-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-blue-600">Save</button>
        </div>
      </form>
    </div>
  </div>
  <form method="dialog" class="modal-backdrop">
    <button>close</button>
  </form>
</dialog>
